<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigation">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconPadding">@dimen/bottom_nav_item_spacing</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemIconSize">@dimen/bottom_nav_icon_size</item>
        <item name="android:minHeight">@dimen/bottom_nav_height</item>
        <item name="android:paddingTop">@dimen/bottom_nav_padding</item>
        <item name="android:paddingBottom">@dimen/bottom_nav_padding</item>
        <item name="itemPaddingTop">@dimen/bottom_nav_item_spacing</item>
        <item name="itemPaddingBottom">@dimen/bottom_nav_item_spacing</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">700</item>
    </style>
</resources>
